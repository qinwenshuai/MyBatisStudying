<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace:命名空间,做sql隔离 -->
<mapper namespace="test">
	<!-- id:sql语句唯一标识 parameterType:指定传入参数类型 resultType:返回结果集类型 #{}占位符:起到占位作用,如果传入的是基本类型(string,long,double,int,boolean,float等),那么#{}中的变量名称可以随意写. -->
	<!-- #{id}表示使用preparedstatement设置占位符号并将输入变量id传到sql。 -->
	<select id="findUserById" parameterType="java.lang.Integer"
		resultType="com.qin.pojo.User">
		select * from user where id=#{id}
	</select>
	
</mapper>
